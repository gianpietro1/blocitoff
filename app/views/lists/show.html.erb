<%if @list.nil? %>
  <div class="row">
    <div class="col-md-8">
          <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>
        </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-8 todo">        
     <h2 class="center"><%= @list.title %></h2>
        <table style="width: 100%" class="table table-striped">
          <tr>
            <th class="center">Description</th>
            <th class="center">Days left</th>
            <th class="center">Complete</th>
          </tr>
            <%= render @items %>
            <%= render partial: "items/form", locals: { list: @list, item: @item } %>
        </table>
      </div>
    </div>
  <div class="row media">
    <div class="col-md-4"> 
         <%= link_to "Edit list", edit_list_path(@list), class: 'btn btn-success' %>
         <%= link_to "Delete list", @list, method: :delete, class: 'btn btn-danger', data: {confirm:'Are you sure you want to delete this list?'} %>
      </div>
  </div>
<% end %>
