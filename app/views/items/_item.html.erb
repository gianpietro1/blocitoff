<%= content_tag :tr, class: 'media', id: "item-#{item.id}" do %>
            <td class="vertical-center center" style="width:100px"><%= item.created_at.strftime('%d-%b') %></td>
            <td><%= item.name %></td>
            <td class="vertical-center center"><%= (((item.created_at + 7.days) - Time.now)/86400).round %></td>
            <td class="vertical-center center"><%= link_to "", item, method: :delete, class: 'glyphicon glyphicon-ok', remote: true %></td>
<% end %>